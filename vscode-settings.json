{
	"editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 16,
	"editor.lineHeight": 1.5,
    "editor.insertSpaces": false,
    "editor.suggestSelection": "first",
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingOvertype": "never",
    "editor.autoSurround": "never",
    "editor.accessibilitySupport": "off",
    "editor.mouseWheelZoom": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.detectIndentation": false,
	"editor.renderWhitespace": "selection",
	"editor.stickyScroll.enabled": false,
	"editor.cursorStyle": "block",
	"editor.fastScrollSensitivity": 20,
	"editor.bracketPairColorization.enabled": false,
	"editor.scrollbar.verticalScrollbarSize": 7,
	"editor.scrollbar.vertical": "visible",
	"editor.scrollbar.horizontalScrollbarSize": 7,
	"editor.scrollBeyondLastLine": false,
	"editor.scrollbar.horizontal": "visible",
	"editor.scrollBeyondLastColumn": 0,
	"editor.semanticTokenColorCustomizations": {
		"rules": {
			"variable": "#EEEEEE",
			"function": "#EEEEEE",
			"method": "#ffb89c",
		}
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope":"variable",
				"settings": {
					"foreground": "#FFFFFF"
				},
			},
			{
				"scope":"variable.name",
				"settings": {
					"foreground": "#FFFFFF"
				},
			},
			{
				"scope":"constant",
				"settings": {
					"foreground": "#94aaff"
				},
			},
			{
				"scope":"string",
				"settings": {
					"foreground": "#DDDDDD"
				},
			},
			// {
			// 	"scope":"comment",
			// 	"settings": {
			// 		"foreground": "#A1A1A1"
			// 	},
			// },
			{
				"scope":"keyword.control",
				"settings": {
					"foreground": "#ff8a8a"
				},
			},
			{
				"scope":"keyword.operator",
				"settings": {
					"foreground": "#DDDDDD"
				},
			},
			{
				"scope":"keyword.operator.logical",
				"settings": {
					"foreground": "#DDDDDD"
				},
			},
			{
				"scope":"support.type",
				"settings": {
					"foreground": "#ffc99c"
				},
			},
			{
				"scope":"support.type.property-name",
				"settings": {
					"foreground": "#fff780"
				},
			},
			
		]
	},
	"window.title": "${dirty}${separator}${activeEditorLong}",
	"window.confirmSaveUntitledWorkspace": false,
	"workbench.startupEditor": "none",
	"workbench.editor.labelFormat" : "long",
	"workbench.commandPalette.history": 20,
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.languageDetection": false,
	"workbench.editor.historyBasedLanguageDetection": false,
	"workbench.list.fastScrollSensitivity": 20,
	"workbench.colorCustomizations": {
		"menu.border":"#111111",
		"menu.background":"#111111",

		"editor.background": "#050505",
		"editor.lineHighlightBackground": "#181818",
		"editor.lineHighlightBorder": "#181818",
		"editorCursor.background": "#181818",
		"editorCursor.foreground": "#aaaaaa",
		"editor.wordHighlightBackground": "#25252500",
		"editor.selectionBackground": "#555555",
		"editorBracketMatch.border": "#00000000",

		"scrollbarSlider.background": "#555555",
		
		"sideBar.border":"#1f1f1f",
		"sideBar.background": "#1f1f1f",
		
		"activityBar.background": "#1f1f1f", 
		"activityBar.border": "#1f1f1f",
		
		"statusBar.background": "#1f1f1f",
		"statusBar.foreground":"#AAAAAA",
		"statusBar.border": "#1f1f1f",
		
		"breadcrumb.background": "#151515",
		
		"button.background": "#333333",

		"list.activeSelectionBackground":"#555555",
		"list.focusAndSelectionOutline":"#555555",
	},

    "debug.console.fontSize": 12,
    "debug.console.fontFamily": "",
	
    "terminal.integrated.fontSize": 12,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fastScrollSensitivity": 20,
	
    "markdown.preview.fontSize": 12,
	
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,

	"files.autoSave": "off",
	
    "security.workspace.trust.untrustedFiles": "open",
	"security.workspace.trust.banner": "never",
	
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	
	"diffEditor.ignoreTrimWhitespace": true,
	"diffEditor.renderSideBySide": true,
	
	"task.autoDetect": "off",
	"workbench.sideBar.location": "right",
	"workbench.navigationControl.enabled": false,
	"github.copilot.nextEditSuggestions.enabled": false,
	"window.menuBarVisibility": "compact",
	"window.menuStyle": "custom",
	"window.commandCenter": false,
	"workbench.layoutControl.enabled": false,
	"extensions.autoUpdate": false,
	"extensions.autoCheckUpdates": false,
	"update.mode": "none",
	"extensions.ignoreRecommendations": true,
	"workbench.editor.tabSizing": "fixed",
	"window.density.editorTabHeight": "compact",
	"breadcrumbs.enabled": false,
}
