{
	"editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 16,
	"editor.lineHeight": 1.5,
    "editor.insertSpaces": false,
    "editor.suggestSelection": "first",
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingOvertype": "never",
    "editor.autoSurround": "never",
    "editor.accessibilitySupport": "off",
    "editor.mouseWheelZoom": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.detectIndentation": false,
	"editor.renderWhitespace": "selection",
	"editor.stickyScroll.enabled": false,
	"editor.cursorStyle": "block",
	"editor.fastScrollSensitivity": 20,
	"editor.bracketPairColorization.enabled": true,
	"editor.semanticTokenColorCustomizations": {
	
	},
	
	"editor.tokenColorCustomizations": {
	
	},

	"window.menuBarVisibility": "visible",
	"window.title": "${dirty}${separator}${activeEditorLong}",
	"window.confirmSaveUntitledWorkspace": false,
	"window.customTitleBarVisibility": "auto",
	"window.titleBarStyle": "custom",
	
	"workbench.editor.showTabs": "single",
	"workbench.startupEditor": "none",
	"workbench.editor.labelFormat" : "long",
	"workbench.commandPalette.history": 20,
	"workbench.editor.empty.hint": "hidden",
	"workbench.sideBar.location": "right",
	"workbench.editor.languageDetection": false,
	"workbench.editor.historyBasedLanguageDetection": false,
	"workbench.list.fastScrollSensitivity": 20,
	"workbench.panel.showLabels": false,
	"workbench.colorCustomizations": {
		"menu.border":"#111111",
		"menu.background":"#111111",

		"editor.background": "#050505",
		"editor.lineHighlightBackground": "#181818",
		"editor.lineHighlightBorder": "#181818",
		"editorCursor.background": "#181818",
		"editorCursor.foreground": "#aaaaaa",
		"editor.wordHighlightBackground": "#25252500",
		"editor.selectionBackground": "#353535",
		"editorBracketMatch.border": "#00000000",

		"scrollbarSlider.background": "#555555",
		
		"sideBar.border":"#181818",
		"sideBar.background": "#181818",
		
		"activityBar.background": "#181818", 
		"activityBar.border": "#181818",
		
		"statusBar.background": "#050505",
		"statusBar.foreground":"#fafafa",
		"statusBar.border": "#050505",
		
		"breadcrumb.background": "#151515",
		
		"button.background": "#333333",

		"list.activeSelectionBackground":"#555555",
		"list.focusAndSelectionOutline":"#555555",
	},

    "debug.console.fontSize": 12,
    "debug.console.fontFamily": "",
	
    "terminal.integrated.fontSize": 12,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fastScrollSensitivity": 20,
	
    "markdown.preview.fontSize": 12,
	
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,

    "files.autoSaveDelay": 5000,
	"files.autoSave": "onFocusChange",

    "security.workspace.trust.untrustedFiles": "open",
	"security.workspace.trust.banner": "never",
	
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	
	"diffEditor.ignoreTrimWhitespace": true,
	"diffEditor.renderSideBySide": true,
	
	"task.autoDetect": "off",
}
